{
  "$grid": {
    "cols": { "base": 2, "md": 12 },
    "gap": 4
  },
  "firstName": {
    "label": "First Name",
    "type": "text",
    "defaultValue": "John",
    "grid": { "colSpan": { "base": 12, "md": 6, "lg": 4 } },
    "validation": {
      "required": "First Name is required",
      "minLength": {
        "value": 3,
        "message": "First Name should have at least 3 characters"
      }
    }
  },
  "lastName": {
    "label": "Last Name",
    "type": "text",
    "grid": { "colSpan": { "base": 12, "md": 6, "lg": 4 } },
    "validation": {
      "required": "Last Name is required"
    }
  },
  "email": {
    "label": "Email",
    "type": "email",
    "grid": { "colSpan": { "base": 12, "md": 12, "lg": 4 } },
    "validation": {
      "required": "Email is required",
      "pattern": {
        "value": "^\\S+@\\S+$",
        "flags": "i",
        "message": "Invalid email address"
      }
    }
  },
  "isOK": {
    "label": "I agree to the terms and conditions",
    "type": "checkbox",
    "grid": { "colSpan": { "base": 12, "md": 12 } },
    "validation": {
      "required": "You must agree to the terms and conditions"
    }
  },
  "options": {
    "label": "Options",
    "options": [
      { "label": "Option 1", "value": "option1" },
      { "label": "Option 2", "value": "option2" },
      { "label": "Option 3", "value": "option3" }
    ],
    "type": "select",
    "grid": { "colSpan": { "base": 12, "md": 6, "lg": 4 } },
    "validation": {
      "required": "Options is required"
    }
  },
  "friends": {
    "label": "Friends",
    "type": "list",
    "grid": { "colSpan": { "base": 12, "md": 12 } },
    "values": {
      "label": "Friend",
      "type": "text",
      "defaultValue": "OK",
      "validation": {
        "required": "Friend name is required"
      }
    }
  },
  "house": {
    "label": "House",
    "type": "object",
    "grid": { "colSpan": { "base": 12, "md": 12 } },
    "of": {
      "$grid": { "cols": { "base": 1, "md": 12 }, "gap": 2 },
      "friends": {
        "label": "Friends",
        "type": "list",
        "grid": { "colSpan": { "base": 12, "md": 12 } },
        "values": {
          "label": "Friend",
          "type": "text",
          "defaultValue": "OK",
          "validation": {
            "required": "Friend name is required"
          }
        }
      },
      "lastName": {
        "label": "Last Name",
        "type": "text",
        "grid": { "colSpan": { "base": 12, "md": 6 } },
        "validation": {
          "required": "Last Name is required"
        }
      },
      "isOK": {
        "label": "I agree to the terms and conditions",
        "type": "checkbox",
        "grid": { "colSpan": { "base": 12, "md": 6 } }
      }
    }
  }
}
